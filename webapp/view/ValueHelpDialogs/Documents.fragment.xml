<core:FragmentDefinition
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:m="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
>
    <ValueHelpDialog id="_IDGenValueHelpDialog1" 
        title="Select ENtry"
        ok=".onPTCVHokPress"
        cancel=".onPTCVHcancelPress"
        afterClose=".onPTCVHAfterClosePress"
        supportRanges="true"
        key="BillingDocument"
        descriptionKey="BillingDocumentType"
    >
        <filterBar>
            <fb:FilterBar id="_IDGenFilterBar" 
                advancedMode="true"
                search=".onPTCVHSearchPress"
                isRunningInValueHelpDialog="true"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem id="_IDGenFilterGroupItem" 
                        groupName="__$INTERNAL$"
                        name="BillingDocument"
                        label="Document No."
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input id="_IDGenInput21" 
                                name="BillingDocument"
                                showSuggestion="true"
                                showValueHelp="false"
                                suggestionItems="{
							   path: '/BillingDocumentStdVH',
							   sorter: { path: 'BillingDocument' }
						    }"
                            >
                                <core:Item id="_IDGenItem" 
                                    key="{BillingDocument}"
                                    text="{
									path: 'BillingDocument',
									formatter : '.vhformatter'
								}"
                                />
                            </m:Input>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem 
                        groupName="__$INTERNAL$"
                        name="BillingDocumentType"
                        label="Document Type"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input 
                                name="BillingDocumentType"
                                showSuggestion="true"
                                showValueHelp="false"
                                suggestionItems="{
								path: '/BillingDocumentStdVH',
								sorter: { path: 'BillingDocumentType' }
							}"
                            >
                                <core:Item 
                                    key="{BillingDocumentType}"
                                    text="{BillingDocumentType}"
                                />
                            </m:Input>
                        </fb:control>
                    </fb:FilterGroupItem>


                    <fb:FilterGroupItem 
                        groupName="__$INTERNAL$"
                        name="SalesOrganization"
                        label="Sales Oraganization"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input 
                                name="SalesOrganization"
                                showSuggestion="true"
                                showValueHelp="false"
                                suggestionItems="{
								path: '/BillingDocumentStdVH',
								sorter: { path: 'SalesOrganization' }
							}"
                            >
                                <core:Item 
                                    key="{SalesOrganization}"
                                    text="{SalesOrganization}"
                                />
                            </m:Input>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
