<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:fo="sap.f"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:mdct="sap.ui.mdc.table"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    controllerName="zgatepass.controller.Create"
    height="100%"
>
    <m:Page
        id="_IDGenPage1"
        showHeader="false"
        contentOnlyBusy="true"
    >
        <m:Panel
            id="_IDGenPanel"
            width="auto"
            class="sapUiResponsiveMargin"
            headerText="General Information"
        >
            <m:content>
                <m:VBox id="_IDGenVBox2">
                    <f:SimpleForm
                        id="EntryHeader"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="3"
                        columnsL="3"
                        columnsM="2"
                        singleContainerFullSize="false"
                    >
                        <f:content>
                            <core:Title
                                id="_IDGenTitle"
                                text=""
                            />
                            <m:Label text="Plant" />
                            <m:Input
                                value="{Header>/Plant}"
                                showValueHelp="true"
                                valueHelpRequest="getPlantDialog"
                                showSuggestion="true"
                                showTableSuggestionValueHelp="true"
                                suggestionRows="{/I_PlantStdVH}"
                                suggestionItemSelected="onSuggestionItemSelectedPlant"
                            >
                                <m:suggestionColumns>
                                    <m:Column
                                        id="_IDGenColumn20"
                                    >
                                        <m:Label text="Plant" />
                                    </m:Column>
                                    <m:Column id="_IDGenColumn23">
                                        <m:Label
                                            id="_IDGenLabel33"
                                            text="Name"
                                        />
                                    </m:Column>
                                </m:suggestionColumns>

                                <m:suggestionRows>
                                    <m:ColumnListItem id="_IDGenColumnListItem">
                                        <m:Label
                                            id="_IDGenLabel34"
                                            text="{Plant}"
                                        />
                                        <m:Label
                                            id="_IDGenLabel37"
                                            text="{PlantName}"
                                        />
                                    </m:ColumnListItem>
                                </m:suggestionRows>
                            </m:Input>
                            <m:Label text="Type" />
                            <m:ComboBox
                                id="EntryType"
                                showSecondaryValues="true"
                                value="{Header>/Type}"
                                required="true"
                                items="{
                                    path: '/ZI_GATEPASSTYPEVH',
                                    sorter: { path: 'Value' }
                                }"
                            >
                                <core:ListItem
                                    id="_IDGenListItem1"
                                    text="{Value}"
                                    additionalText="{Description}"
                                />
                            </m:ComboBox>
                            <m:Label
                                id="_IDGenLabel1"
                                text="Sales Man"
                            />
                            <m:Input
                                id="_IDGenInput1"
                                value="{Header>/SalesmanName}"
                                showValueHelp="true"
                                valueHelpRequest="getSalesManDialog"
                            />

                            <m:Input
                                id="SalesCode"
                                editable="false"
                                value="{Header>/SalesmanCode}"
                            >
                                <m:layoutData>
                                    <layout:GridData
                                        id="_IDGenGridData"
                                        span="XL2 L3 M3 S4"
                                    />
                                </m:layoutData>
                            </m:Input>

                            <m:Label
                                id="_IDGenLabel2"
                                text="Vehicle"
                            />
                            <m:Input
                                id="VehicleNumber"
                                value="{Header>/VehicleNumber}"
                            />

                            <m:Label
                                id="RefDocLabel"
                                text="Driver"
                            />
                            <m:Input
                                id="DriverName"
                                type="Text"
                                value="{Header>/DriverName}"
                            />

                            <m:Label
                                id="BillAmountLabel"
                                text="Route"
                            />
                            <m:Input
                                id="RouteName"
                                value="{Header>/RouteName}"
                            />

                            <m:Label text="Document" />
                            <m:Input
                                showValueHelp="true"
                                valueHelpRequest="handlePTCValueHelp"
                                change="docnochange"
                            />

                            <core:Title
                                id="_IDGenTitle2"
                                text=""
                            />

                            <m:Label
                                id="_IDGenLabel15"
                                text="Cm Crate 1"
                            />
                            <m:Input
                                id="_IDGenDatePicker1"
                                value="{Header>/Cmcrate1}"
                            />
                            <m:Label
                                id="ExpectedReturnDateLabel"
                                text="Cm Crate 2"
                            />
                            <m:Input
                                id="ExpectedReturnDate"
                                value="{Header>/Cmcrate2}"
                            />

                            <m:Label
                                id="OutDateTimeLabel"
                                text="Cm Crate 3"
                            />
                            <m:Input
                                id="OutDate"
                                value="{Header>/Cmcrate3}"
                            />

                            <m:Label
                                id="InDateTimeLabel"
                                text="Cm Crate 4"
                            />
                            <m:Input
                                id="InDate"
                                value="{Header>/Cmcrate4}"
                            />

                            <m:Label
                                id="_IDGenLabel6"
                                text="CB"
                            />
                            <m:Input
                                id="_IDGenInput8"
                                value="{Header>/Cb}"
                            />

                            <m:Label text="Remarks" />
                            <m:TextArea value="{Header>/Remarks}" />

                            <core:Title
                                id="_IDGenTitle3"
                                text=""
                            />

                            <m:Label
                                id="_IDGenLabel8"
                                text="Bill Amount"
                            />
                            <m:Input
                                id="_IDGenInput3"
                                editable="false"
                                value="{Header>/BillAmount}"
                            />

                            <m:Label
                                id="_IDGenLabel7"
                                text="Multi Gate Pass"
                            />
                            <m:ComboBox
                                id="MultiGP"
                                showSecondaryValues="true"
                                value="{Header>/MultiGPass}"
                                required="true"
                                items="{
                                    path: '/ZI_MULTIGPVH',
                                    sorter: { path: 'Value' }
                                }"
                                change="onValueChange"
                            >
                                <core:ListItem
                                    text="{Value}"
                                    additionalText="{Description}"
                                />
                            </m:ComboBox>
                            <m:Label
                                id="InvoicePartyLabel"
                                text="First GP Number"
                            />

                            <m:Input
                                id="FirstGpNumber"
                                showValueHelp="true"
                                valueHelpRequest="getFirstGPDialog"
                                editable="false"
                                value="{Header>/FirstGpNumber}"
                            />

                            <m:Label
                                id="_IDGenLabel25"
                                text="First GP Amount"
                            />
                            <m:Input
                                id="FirstGpAmount"
                                editable="false"
                                value="{Header>/FirstGpAmount}"
                            />

                            <m:Label text="VRN No" />
                            <m:Input value="{Header>/VrnNo}" />
                        </f:content>
                    </f:SimpleForm>
                </m:VBox>
            </m:content>
        </m:Panel>
        <fo:DynamicPage
            id="dynamicPageId"
            fitContent="true"
        >
            <fo:content>
                <t:Table
                    rows="{Details>/OrderDetailsTable}"
                    id="LineTable"
                >
                    <t:extension>
                        <m:OverflowToolbar style="Clear">
                            <m:Title text="Lines" />
                            <m:ToolbarSpacer />
                            <m:Button
                                text="Remove"
                                press="deleteLine"
                            />
                        </m:OverflowToolbar>
                    </t:extension>
                    <t:rowMode>
                        <rowmodes:Interactive minRowCount="5" />
                    </t:rowMode>
                    <t:columns>
                        <t:Column width="11rem">
                            <m:Label text="S. No." />
                            <t:template>
                                <m:Text text="{Details>SNo}" />
                            </t:template>
                        </t:Column>

                        <t:Column width="11rem">
                            <m:Label text="Document No" />
                            <t:template>
                                <m:Text text="{Details>DocumentNo}" />
                            </t:template>
                        </t:Column>

                        <t:Column width="11rem">
                            <m:Label text="Document Date" />
                            <t:template>
                                <m:Text text="{Details>DocumentDate}" />
                            </t:template>
                        </t:Column>

                        <t:Column width="11rem">
                            <m:Label text="Amount" />
                            <t:template>
                                <m:Text
                                    text="{Details>Amount}    {Details>Currency}"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column width="11rem">
                            <m:Label text="Quantity" />
                            <t:template>
                                <m:Text
                                    text="{Details>Quantity}   {Details>Unit}"
                                />
                            </t:template>
                        </t:Column>

                        <t:Column width="11rem">
                            <m:Label text="Vrn No" />
                            <t:template>
                                <m:Text text="{Details>VrnNo}" />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </fo:content>
        </fo:DynamicPage>

        <m:footer>
            <m:OverflowToolbar id="_IDGenOverflowToolbar4">
                <m:Button
                    id="_IDGenButton16"
                    visible="{=!!${message>/}.length}"
                    icon="{ path: '/', formatter: '.buttonIconFormatter' }"
                    type="{ path: '/', formatter: '.buttonTypeFormatter' }"
                    text="{path: '/', formatter: '.highestSeverityMessages' }"
                    press=".handleMessagePopoverPress"
                    ariaHasPopup="Dialog"
                />

                <m:ToolbarSpacer id="_IDGenToolbarSpacer5" />
                <m:Button
                    id="_IDGenButton6"
                    type="Default"
                    text="Cancel"
                    press="cancel"
                />
                <m:Button
                    id="_IDGenButton9"
                    type="Emphasized"
                    text="Save"
                    press="save"
                />
            </m:OverflowToolbar>
        </m:footer>
    </m:Page>
</mvc:View>
